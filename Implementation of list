#include <stdio.h>
#define MAX 100
int list[MAX];
int size =0,i;
//function to insert at the end 
void insertEnd (int item){
	if (size==MAX){
		printf("list is full!\n");
		return;
	}
	list [size]=item;
	size++;
}

//function to insert at the begining 
void insertBegining (int item){
	if (size==MAX){
		printf("list id full!\n");
		return;
	}
	for (i=size-1;i>=0;i--){
		list[i+1]=list[i];
	}
	list[0]=item;
	size++;
}

//Function to insert at the specific position
void insertAt(int item, int pos){
	if(size==MAX){
		printf("List is full");
		return;
	}
	if (pos<0||pos>size){
		printf("invalid position!\n");
		return;
	}
	for (i=size-1;i>=pos;i--){
		list[i+1]=list[i];
	}
	list[pos]=item;
	size++;
}

//Function to Delete from the end 
void deleteEnd(){
	if (size==0){
		printf("list is empty!\n");
		return;
	}
	size--;
}

//Function to delete from the begining 
void deleteBegining(){
	if(size==0){
		printf("List is empty !\n");
		return;
	}
	for(i=0;i<size-1;i++){
		list[i]=list[i+1];
	}
	size--;
	}


//Function to delete from a specific post 
void deleteAt(int pos){
	if (size==0){
		printf("list is empty!\n");
		return;
	}
	if(pos<0||pos>=size){
		printf("invalid position!\n");
		return;
	}
	for(i=pos;i<size-1;i++){
		list[i]=list[i+1];
	}
	size--;
}

//Function to traverse and print the list 
void traverse(){
	if(size==0){
		printf("list is empty!\n");
		return;
	}
	printf("List elements: ");
	for(i=0; i<size; i++){
		printf("%d ",list[i]);
	}
	printf("\n");
}

//main section
int main(){
	insertEnd(10);
	insertEnd(20);
	insertEnd(30);
	traverse();
	insertBegining(1);
	traverse();
	insertAt(15,2);
	traverse();
	deleteBegining();
	traverse();
	deleteBegining();
	traverse();
	deleteAt(1);
	traverse();
	return 0;
}
